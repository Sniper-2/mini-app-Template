<!-- pages/profile/profile.wxml -->
<view class="container">
  <view class="header">
    <text class="title">个人中心</text>
  </view>

  <view class="user-info">
    <image class="avatar" src="{{user.avatar || '/images/default-avatar.png'}}" />
    <view class="user-text">
      <text class="nickname">{{user.nickname || '未登录'}}</text>
      <text class="level">等级: {{user.level || '普通会员'}}</text>
    </view>
  </view>

  <view class="order-section">
    <view class="section-title">我的订单</view>
    <view class="order-list">
      <view class="order-item" bindtap="goToOrders" data-status="pending">
        <text class="order-icon">🕒</text>
        <text class="order-text">待付款</text>
      </view>
      <view class="order-item" bindtap="goToOrders" data-status="shipping">
        <text class="order-icon">🚚</text>
        <text class="order-text">待收货</text>
      </view>
      <view class="order-item" bindtap="goToOrders" data-status="completed">
        <text class="order-icon">✅</text>
        <text class="order-text">已完成</text>
      </view>
      <view class="order-item" bindtap="goToOrders" data-status="refund">
        <text class="order-icon">💰</text>
        <text class="order-text">退款/售后</text>
      </view>
    </view>
  </view>

  <view class="function-list">
    <view class="function-item" bindtap="goToAddress">
      <text class="function-icon">🏠</text>
      <text class="function-text">地址管理</text>
      <text class="arrow">›</text>
    </view>
    <view class="function-item" bindtap="contactSupport">
      <text class="function-icon">📞</text>
      <text class="function-text">联系客服</text>
      <text class="arrow">›</text>
    </view>
    <view class="function-item" bindtap="goToSettings">
      <text class="function-icon">⚙️</text>
      <text class="function-text">设置</text>
      <text class="arrow">›</text>
    </view>
  </view>

  <button class="logout-btn" bindtap="logout">退出登录</button>
</view>
