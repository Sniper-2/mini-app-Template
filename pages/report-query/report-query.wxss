
.page-container {
  background: #f5f7f8;
}
.tabs-item {
  position: relative;
}
.select-item::before {
  content: '';
  position: absolute;
  display: inline-block;
  width: 50rpx;
  height: 8rpx;
  background: #cb2954;
  border-radius: 15rpx;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.data-list-box {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.data-item {
  border-radius: 14rpx;
}
.item-times {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}
.item-reservation-info {
  padding: 20rpx 0;
}
.item-reservation-info + .item-reservation-info {
  padding-top: 0;
}
.info-lable {
  width: 130rpx;
}
.preview-PDF {
  color: #4eb1f7;
}